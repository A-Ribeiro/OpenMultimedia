if(AVCODEC_INCLUDE_DIR AND AVCODEC_LIBRARIES)
	unset(AVCODEC_INCLUDE_DIR)
	unset(AVCODEC_LIBRARIES)
endif()

if (AVCODEC_ROOT)
	find_path(AVCODEC_INCLUDE_DIR libavcodec/avcodec.h PATHS ${AVCODEC_ROOT})
	find_library(AVCODEC_LIBRARIES NAMES avcodec avcodec.58 PATHS ${AVCODEC_ROOT})
else()
	find_path(AVCODEC_INCLUDE_DIR libavcodec/avcodec.h)
	find_library(AVCODEC_LIBRARIES NAMES avcodec avcodec.58)
endif()

if(AVCODEC_INCLUDE_DIR AND AVCODEC_LIBRARIES)
	set(AVCODEC_FOUND ON)
endif()

if(AVCODEC_FOUND)
	if (NOT ${CMAKE_FIND_PACKAGE_NAME}_FIND_QUIETLY)
		MESSAGE(STATUS "Found ${CMAKE_FIND_PACKAGE_NAME} include:  ${AVCODEC_INCLUDE_DIR}")
		MESSAGE(STATUS "Found ${CMAKE_FIND_PACKAGE_NAME} library: ${AVCODEC_LIBRARIES}")
	endif()
else()
	if(${CMAKE_FIND_PACKAGE_NAME}_FIND_REQUIRED)
		MESSAGE(FATAL_ERROR "Could NOT find ${CMAKE_FIND_PACKAGE_NAME} development files")
	endif()
endif()